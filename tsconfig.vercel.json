{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "allowJs": true,
    "checkJs": false,
    "isolatedModules": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": false,
    "noFallthroughCasesInSwitch": false,
    "ignoreDeprecations": "5.0"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}